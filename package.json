{
  "name": "nodejs-express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev-local": "nodemon src/server.ts",
    "test-local": "npx jest",
    "dev": "docker-compose -p myapp-dev -f docker/docker-compose.dev.yml up --build --remove-orphans --abort-on-container-exit",
    "test-api": "docker-compose -p myapp-test-api -f docker/docker-compose.test.yml up --build --remove-orphans --abort-on-container-exit",
    "test-load": "docker-compose -p myapp-test-load -f docker/docker-compose.load-test.yml up --build --remove-orphans --abort-on-container-exit",
    "format": "npx prettier --write src/",
    "format-all": "npx prettier . --write",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "rinesh",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.0",
    "pino": "^9.2.0",
    "pino-http": "^10.2.0",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/k6": "^0.52.0",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "src/**/*.ts": "prettier --write --ignore-unknown"
  }
}
